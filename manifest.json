{
  "manifest_version": 2,

  "name": "Web Alchemy",
  "description": "Turn the websites you visit into gold!",
  "version": "0.1",

  "browser_action": {
    "default_icon": "img/icon-16.png",
    "default_popup": "popup.html",
    "default_title": "Click to open extension"
  },

  "icons": { "16": "img/icon-16.png",
           "48": "img/icon-48.png",
           "128": "img/icon-128.png",
           "256": "img/icon-256.png",
           "512": "img/icon-512.png" },

  "permissions": [
          "tabs",
          "storage",
          "alarms",
          "notifications"
        ],
  "background": {
    "scripts": ["jquery-3.1.1.min.js","background.js"],
    "persistent": false
  }
}
